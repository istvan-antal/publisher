{% extends 'base.html.twig' %}

{% block body %}
    <ul class="breadcrumb">
        <li class="breadcrumb-item">
            <a href="/">
                Home
            </a>
        </li>
        <li class="breadcrumb-item">
            Sites
        </li>
    </ul>
    
    <h1>Sites</h1>
    
    <a class="btn" href="{{ path('site_new') }}">Create</a>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Created</th>
            </tr>
        </thead>
        <tbody>
        {% for site in sites %}
            <tr>
                <td><a href="{{ path('site_edit', { 'id': site.id }) }}">{{ site.name }}</a></td>
                <td>{% if site.createdAt %}{{ site.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
        
{% endblock %}
